<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
        <item android:state_pressed="true" >
            <shape android:shape="rectangle"  >
                <corners android:radius="3dip" />
                <stroke android:width="1dip" android:color="#ff2696e5" />
                <gradient  android:angle="-90"  android:startColor="#ff141cbe" android:endColor="#ff1876d6"  />
            </shape>
        </item>
        <item android:state_focused="true">
            <shape android:shape="rectangle"  >
                <corners android:radius="3dip" />
                <stroke android:width="1dip" android:color="#ff110ea1" />
                <solid  android:color="#ff2696e5"/>
            </shape>
        </item>
        <item >
            <shape android:shape="rectangle"  >
                <corners android:radius="3dip" />
                <stroke android:width="1dip" android:color="#ff2754c5" />
                <gradient  android:angle="-90"  android:startColor="#ffadebff" android:endColor="#ff2696e5" />
            </shape>
        </item>
</selector>