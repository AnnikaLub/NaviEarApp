<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle" >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#ffff8506" />
            <gradient  android:angle="-90"  android:startColor="#ffffbba4" android:endColor="#ffffbb83"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#ffffbb83" />
            <solid  android:color="#ffffedbb"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="2dip" android:color="#ffffb445" />
            <gradient  android:angle="-90"  android:startColor="#ffffe7aa" android:endColor="#fffcffea" />
        </shape>
    </item>
</selector>