<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Trial _/2:"
            android:id="@+id/t4p1txtTrial"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/t4p1Inst"
            android:id="@+id/t4p1Inst"
            android:layout_alignParentTop="true"
            android:layout_marginTop="77dp"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"  />


        <Button
            style="@style/btnStyleGreen"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:text="@string/t4p1button_start"
            android:id="@+id/t4p1buttonStart"
            android:layout_below="@id/t4p1Inst"
            android:layout_marginTop="60dp" />

    </RelativeLayout>
</LinearLayout>